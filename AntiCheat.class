using UnityEngine;

public class AntiCheat : MonoBehaviour
{
    private Vector3 lastPosition;
    private float lastSpeed;
    private float lastDistance;

    void Start()
    {
        lastPosition = transform.position;
        lastSpeed = 0f;
        lastDistance = 0f;
    }

    void Update()
    {
        float currentSpeed = (transform.position - lastPosition).magnitude / Time.deltaTime;
        lastDistance += Vector3.Distance(transform.position, lastPosition);
        lastPosition = transform.position;
        lastSpeed = currentSpeed;

        if (Mathf.Abs(currentSpeed - lastSpeed) > 3.0f && lastDistance > 10.5f)
        {
            Destroy(gameObject);
            Debug.Log("안티치트가 감지되었습니다. 고객센터로 문의해주세요!");
        }
    }
}
